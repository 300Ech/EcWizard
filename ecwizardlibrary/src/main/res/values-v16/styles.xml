<resources>

    <style name="WizardPageTitle">
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/wizard_page_title_layout_margin_bottom</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="WizardPageContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/wizard_page_content_layout_margin_bottom</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

</resources>